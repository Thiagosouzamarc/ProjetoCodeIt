@{ 
    ViewData["Title"] = "Carrossel";
}

@model List<Produto>;

    <div class="panel-title">
    <h1>Sugestões</h1>
</div>


<div class="container">
    <table class="table table-dark">
        <thead>
            <tr>
                <th scope="col"></th>
                <th scope="col">Produtos</th>
                <th scope="col">Horas</th>
                <th scope="col">Valor</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Impressora, Jogo de Panelas, Televisão</td>
                <td>21 horas</td>
                <td>R$ 540,00</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Impressora, Cafeteira, Material Escolar, Camiseta, Livro</td>
                <td>21 Horas</td>
                <td>R$ 595,00</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Jogo de Panelas, Cafeteira, Material Escolar, Camiseta, Joystick</td>
                <td>21 horas</td>
                <td>R$ 640,00</td>
            </tr>
            <tr>
                <th scope="row">4</th>
                <td>Jogo de Panelas, Televisão, Cafeteira, Joystick, Livro</td>
                <td>21 horas</td>
                <td>R$ 680,00</td>
            </tr>
            <tr>
                <th scope="row">5</th>
                <td>Televisão, Cafeteira, Material Escolar, Camiseta, Joystick, Livro</td>
                <td>21 horas</td>
                <td>R$ 680,00</td>
            </tr>
        </tbody>
    </table>
</div>
<h3>Itens para entrega</h3>


<div id="my-carousel" class="carousel slide" data-ride="carousel">
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="row">
                @{
                    var produtosDaPagina = Model.Take(8);
                }

                @foreach (var produto in produtosDaPagina)
                {

                    <div class="col-md-3 col-sm-3 col-lg-3">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <div><h4>@produto.Codigo código</h4></div>
                                <div class="produto-nome"><h4><strong>@produto.Nome</strong></h4></div>
                            </div>
                            <div class="panel-footer produto-footer">
                                <div><h4>@produto.Horas horas</h4></div>
                                <div><h4>R$ @produto.Preco</h4></div>
                                <div class="text-center">
                                    <a asp-action="carrinho" asp-route-codigo="@produto.Codigo" class="btn btn-success">Adicionar</a>
                                </div>
                            </div>
                        </div>
                    </div>

                }

            </div>

        </div>

    </div>
    <!-- Controls -->
    @*<a class="left carousel-control" href="#my-carousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="false"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#my-carousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="false"></span>
        <span class="sr-only">Next</span>
    </a>*@
</div>